# =============================================================================
# Ecosfer SKDM v2.0 - Production Environment Variables
# Copy to .env and fill in actual values
# =============================================================================

# Database
DB_USER=ecosfer
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=ecosfer_skdm

# Redis
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# NextAuth
NEXTAUTH_URL=https://cbam.ecosfer.com
NEXTAUTH_SECRET=CHANGE_ME_RANDOM_SECRET_AT_LEAST_32_CHARS

# Container Registry
REGISTRY=ghcr.io
IMAGE_PREFIX=ecosfer/skdm
TAG=latest

# CORS (comma-separated origins for .NET and Python services)
CORS_ALLOWED_ORIGINS=https://cbam.ecosfer.com

# Email (Resend)
RESEND_API_KEY=

# AI Service (optional - falls back to template-based reports)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Grafana (monitoring)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
